{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": ["node"],           // âœ” Only Node types
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,        // ðŸ”¥ KEY FIX: prevents RN / Expo type conflicts
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib"
  },
  "include": ["src/**/*"],
  "exclude": [
    "../node_modules",
    "../../node_modules",
    "**/*.spec.ts",
    "**/__tests__/**"
  ]
}
