{
  "expo": {
    "name": "MyHealthVaultAI",
    "slug": "myhealthvaultai",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myhealthvaultai",
    "userInterfaceStyle": "automatic",

    "icon": "./assets/icon.png",

    "splash": {
      "image": "./assets/images/splash_icon_1200.png",
      "resizeMode": "contain",
      "backgroundColor": "#FFFFFF"
    },

    "plugins": ["expo-speech-recognition"],

    "android": {
      "package": "com.sterlingco.myhealthvaultai",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow MyHealthVaultAI to access your microphone for recording voice notes and medical history.",
        "NSSpeechRecognitionUsageDescription": "Allow MyHealthVaultAI to use speech recognition to capture your medical history accurately."
      }
    },

    "assetBundlePatterns": ["**/*"],

    "extra": {
      "eas": {
        "projectId": "b21d9fb3-11b1-4075-bc60-eb3568721f8c"
      }
    }
  }
}
